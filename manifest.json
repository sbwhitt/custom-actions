{
    "name": "Custom Actions",
    "description": "Custom keyboard shortcuts for your browser.",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "48": "./images/icon.png",
        "128": "./images/icon.png"
    },
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": "./images/icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "history"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./js/scripts/script.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "./js/scripts/sw.js",
        "type": "module"
    }
}