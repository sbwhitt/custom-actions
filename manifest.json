{
    "name": "Custom Actions",
    "description": "Custom keyboard actions",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": "./images/icon.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./scripts/script.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "./scripts/sw.js"
    }
}